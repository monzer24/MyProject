<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.projects.check">
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <uses-permission android:name="android.hardware.camera2.full"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/check_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/check_icon_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".ui.LogInActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.CapturedImage"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ui.CameraActivity"
            android:screenOrientation="portrait" />

        <activity android:name=".ui.SignUpActivity"/>
        <!--<activity android:name=".LogInActivity"/>-->
        <activity
            android:name=".ui.CheckInfo"
            android:screenOrientation="portrait"
            />

        <activity
            android:name=".ui.ChoosingAction"
            android:screenOrientation="portrait"
            />

        <activity
            android:name=".ui.RetrieveCheck"
            android:screenOrientation="portrait"
            />

    </application>

</manifest>